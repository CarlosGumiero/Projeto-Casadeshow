@model IEnumerable<Casadeshow.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<div style="text-align:center;border:3px solid green">
    <h1>Eventos</h1>
</div>

<p>
    <a asp-action="Create">Criar novo evento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                Preço do Ingresso
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                Ingressos disponíveis
            </th>
            <th>
                Casa de Show
            </th>
            <th>
                Gênero
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoIngresso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdIngresso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CasaDeShow.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nome)
            </td>
            <td>
                <img src="@Url.Action("PegarImagem", "Evento", new {id = item.EventoId})" width="150px" height="150px" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventoId" style="color: darkblue;">Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.EventoId" style="color: red;">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
