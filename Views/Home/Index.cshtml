@model IEnumerable<Casadeshow.Models.Evento>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
    
@{
    ViewData["Title"] = "Eventos";
}

<div style="text-align:center;border:3px solid green">
    <h1>Bem Vindo</h1>
</div>

<table class="table">
    <thead>
        <tbody>
            <br>
            @foreach (var item in Model) 
            {
                <div class="contaner row" style="border:3px solid blue">

                    <div class="col-sm-3  centralizar">
                        <img src="@Url.Action("PegarImagem", "Evento", new {id = item.EventoId})" width="200px" height="200px" />
                    </div>

                    <div class="col-sm-7 text-center ">
                        <br><br>
                                <h5>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </h5>
                            <br>
                                R$ @Html.DisplayFor(modelItem => item.PrecoIngresso) taokeis
                            <br>
                                Data: @Html.DisplayFor(modelItem => item.Data)
                            <br>
                                Ingressos disponíveis: @Html.DisplayFor(modelItem => item.QtdIngresso)
                            <br>
                                Casa de show: @Html.DisplayFor(modelItem => item.CasaDeShow.Nome)
                            <br>
                                Gênero: @Html.DisplayFor(modelItem => item.Genero.Nome)
                            <br>

                    </div>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                <div class="col-sm-2 centralizar" >
                                    <a asp-controller="Compra" asp-action="Compra" asp-route-id="@item.EventoId" style="color: darkblue;">Comprar</a>
                                </div>
                                }
                </div>
                <br>
}
        </tbody>
        
    </thead>
</table>
