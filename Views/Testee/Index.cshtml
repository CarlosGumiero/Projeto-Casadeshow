@model IEnumerable<Casadeshow.Models.Testee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="@Url.Action("PegarImagem", "Testee", new {id = item.ImajId})" width="150px" height="150px" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImajId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ImajId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
